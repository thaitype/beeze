{
  "name": "beeze",
  "version": "0.0.2",
  "type": "module",
  "description": "Build tool for tiny Node.js serverless functions and minimal Docker images.",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "default": "./dist/main.cjs"
    }
  },
  "bin": {
    "beeze": "bin.mjs"
  },
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ci": "vitest run",
    "build:cli": "tsup src/cli.ts --format esm",
    "build:lib": "tsup src/index.ts --dts --format esm,cjs",
    "build": "run-p build:cli build:lib",
    "format": "prettier -w src",
    "lint": "tsc --noEmit && eslint ./src && prettier -c src",
    "lint:fix": "eslint --fix ./src && prettier -w src",
    "changeset": "changeset",
    "release": "npm run all && changeset publish",
    "all": "run-s lint build"
  },
  "peerDependencies": {
    "esbuild": ">=0.25.0 <1.0.0"
  },
  "devDependencies": {
    "@beezejs/eslint-config": "workspace:*",
    "@beezejs/typescript-config": "workspace:*",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "vitest": "^3.1.4"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "files": [
    "bin.mjs",
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/beeze.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/thaitype/beeze",
  "dependencies": {
    "@thaitype/core-utils": "^1.1.1",
    "ansis": "^4.1.0",
    "chokidar": "^4.0.3",
    "execa": "^8.0.1",
    "lodash-es": "^4.17.21",
    "unconfig": "^7.3.1",
    "yargs": "^17.7.2",
    "zod": "^3.25.30"
  }
}