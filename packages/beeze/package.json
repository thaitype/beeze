{
  "name": "beeze",
  "version": "0.0.2",
  "description": "Build tool for tiny Node.js serverless functions and minimal Docker images.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/dts/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "bin": {
    "beeze": "bin.mjs"
  },
  "scripts": {
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ci": "vitest run",
    "dev": "tsc",
    "build": "run-s format build-esm build-cjs build-annotate",
    "build-esm": "tsc",
    "build-cjs": "babel dist/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir dist/cjs --source-maps",
    "build-annotate": "babel dist --plugins annotate-pure-calls --out-dir dist --source-maps",
    "format": "prettier -w src",
    "lint": "tsc --noEmit && eslint ./src && prettier -c src",
    "lint:fix": "eslint --fix ./src && prettier -w src",
    "changeset": "changeset",
    "release": "npm run all && changeset publish",
    "all": "run-s lint build"
  },
  "peerDependencies": {
    "esbuild": ">=0.25.0 <1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/plugin-transform-export-namespace-from": "^7.24.1",
    "@babel/plugin-transform-modules-commonjs": "^7.24.1",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "@beezejs/eslint-config": "workspace:*",
    "@beezejs/typescript-config": "workspace:*",
    "@changesets/cli": "^2.29.4",
    "@type-challenges/utils": "^0.1.1",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.5.3",
    "vitest": "^3.1.4"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "files": [
    "bin.mjs",
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/beeze.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/thaitype/beeze",
  "dependencies": {
    "@drizzle-team/brocli": "^0.11.0",
    "@thaitype/core-utils": "^1.1.1",
    "ansis": "^4.1.0",
    "chokidar": "^4.0.3",
    "execa": "^8.0.1",
    "lodash-es": "^4.17.21",
    "unconfig": "^7.3.1",
    "yargs": "^17.7.2",
    "zod": "^3.25.30"
  }
}